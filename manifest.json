{
    "name": "DataV Helper Extensions",
    "description": "DataV Helper Extensions",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["./js/background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": ["*://datav.aliyun.com/screen/*"],
            "css": ["content.css"],
            "js": ["./third-party/jquery-1.12.4.js", "./js/content.js"]
        }
    ],
    "permissions": [
        "*://datav.aliyun.com/*",
        "tabs",
        "cookies",
        "contextMenus",
        "notifications",
        "storage",
        "webRequest"
    ],
    "optional_permissions": ["<all_urls>"]
}
